# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
indent_style = space

[*.{json,yml}]
indent_size = 2

[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_style = space
max_line_length = 119

[Makefile]
indent_style = tab

